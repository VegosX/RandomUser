<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>


    <style name="search_tool_bar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="textColorAlertDialogListItem">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="stylespinner">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#1976D2</item>
    </style>

    <style name="text_info_size">25dp</style>

    <style name="iv">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_width">34dp</item>
    </style>
    <style name="textst">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="primary_tv">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="primary_caps_tv">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#88000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="second_tv" parent="primary_tv">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#88000000</item>
    </style>
    <style name="pad" parent="primary_tv">
        <item name="android:padding">16dp</item>
    </style>



    <style name="second_tv_second">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#88000000</item>
    </style>

    <style name="primary_tv_second">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
